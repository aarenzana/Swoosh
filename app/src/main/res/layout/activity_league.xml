<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LeagueActivity">

    <ImageView
            android:src="@drawable/desiredleaguebg"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/imageView3"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:scaleType="centerCrop"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="Desired League"
            android:layout_width="242dp"
            android:layout_height="31dp"
            android:id="@+id/textView4" android:textColor="#fff"
            android:fontFamily="@font/montserrat" android:textSize="18sp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:singleLine="false" android:textAlignment="center"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/imageView4"/>
    <ImageView
            android:src="@drawable/swooshlogo"
            android:layout_width="100dp"
            android:layout_height="32dp"
            android:id="@+id/imageView4" android:scaleType="fitCenter" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="@+id/imageView3"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="361dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4">
        <ToggleButton
                android:text="Mens"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/toggleButton8" android:textOff="Mens"
                android:textOn="Mens" android:background="@drawable/swoosh_toggle"
                android:textColor="#FFFFFF" android:fontFamily="@font/montserrat"/>
        <ToggleButton
                android:text="ToggleButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/toggleButton9" android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp" android:textOff="Womens" android:textOn="Womens" tools:text="Womens"
                android:background="@drawable/swoosh_toggle" android:textColor="#FFFFFF"
                android:fontFamily="@font/montserrat"/>
        <ToggleButton
                android:text="ToggleButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/toggleButton10" android:textOff="Co-Ed"
                android:textOn="Co-Ed" tools:text="Co-Ed" android:background="@drawable/swoosh_toggle"
                android:textColor="#FFFFFF" android:fontFamily="@font/montserrat"/>
    </LinearLayout>
    <Button
            android:text="Next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button2" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:background="@drawable/swoosh_button"
            android:fontFamily="@font/montserrat" android:textColor="@color/colorAccent"/>
</androidx.constraintlayout.widget.ConstraintLayout>